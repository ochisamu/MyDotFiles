#nprom
function myprom(){
	#¥ê¥â¡¼¥È¤Î¾ì¹ç¤Ï¥Û¥¹¥ÈÌ¾¤Î¿§¤òÊÑ¤¨¤ë
	if [ -n "${REMOTEHOST}${SSH_CONNECTION}" ]; then
		PROMPT="%{[32m%}%B%U%m"
	else
		PROMPT="%{[33m%}%B%U%m"
	fi

	#root¤Î¾ì¹ç¤Ï¿§¤òÊÑ¤¨¤ë
	case "$USER" in
		root)
			PROMPT="${PROMPT}%{[33m%}%u{%U%{[31m%}%n/"
			;;
		*)
			PROMPT="${PROMPT}%{[33m%}{%n/"
			;;
	esac
}
myprom
PROMPT="${PROMPT}%{[36m%}INS%{[33m%}}%{[37m%}%#%b%u "
#zsh¥×¥í¥ó¥×¥È¤Ë¥â¡¼¥ÉÉ½¼¨####################################
function zle-line-init zle-keymap-select {
	myprom
	#zsh-vi¤Î¥â¡¼¥ÉÌ¾¤òÉ½¼¨
	case $KEYMAP in
		vicmd)
			PROMPT="${PROMPT}%{[31m%}NOR%{[33m%}}%{[37m%}%#%b%u "
			;;
		main|viins)
			PROMPT="${PROMPT}%{[36m%}INS%{[33m%}}%{[37m%}%#%b%u "
			;;
	esac
	zle reset-prompt
}
zle -N zle-line-init
zle -N zle-keymap-select


