# prompt setting
#export PROMPT="%B%n%b@:%/%{%}/$ "
SPROMPT="%B%{[31m%}%r%b %Bis correct?%b %B%{[31m%}[n,y,a,e]:%{[m%}%b "
setopt prompt_subst
local rbase=$'%{\e[33m%}[%~]%{\e[m%}' lf=$'\n'
RPROMPT="%9(~||$rbase)"
#nprom () {
#	    setopt prompt_subst
